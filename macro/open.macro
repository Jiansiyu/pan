TaRootRep    *pandef;
TaRootRegDef *regdef;
TaRootDitDef *ditdef;
TFile *f;
TFile *f2;
TTree *raw;
TTree *asy;
TTree *reg;
TTree *regslps;
TTree *dit;
TTree *ditslps;

Int_t open (Int_t run = 0, TString atype = "standard", TString com = "")
{
  if (run <= 0)
    {
      cout << "Enter run number : ";
      cin >> run;
    }
  if (atype == "")
    {
      cout << "Enter analysis type: ";
      cin >> atype;
    }
     
  cout << "Run " << run << " analysis type " << atype;
  if (com != "") cout << " comment " << com;
  cout << endl;

  TaFileName::Setup (run, atype.Data());
  TString file = (TaFileName ("root", com)).Tstring();
  cout << "ROOT file is \n\t" << file << endl;
  f = new TFile(file);
  
  if(atype=="regress") {
    reg = (TTree*)f->Get("reg");
    regslps = (TTree*)f->Get("regcoeffs");

    TaFileName::Setup (run, "standard");
    TString file2 = (TaFileName ("root")).Tstring();
    f2 = new TFile(file2);
    cout << "Also opened ROOT file: \n\t" << file2 << endl;
    asy = (TTree*)f2->Get("P");

    if (reg!=NULL) {
      asy->AddFriend("reg",file);
      cout << "reg tree friended to asy tree" << endl;
      regdef = (TaRootRegDef*)f->Get("TaRootRegDef;1");
      if (regdef) regdef->Print();
    }
    pandef = (TaRootRep*)f2->Get("TaRootRep;1");
    raw = (TTree*)f2->Get("R");
  }
  if(atype=="dither") {
    dit = (TTree*)f->Get("dit");
    ditslps = (TTree*)f->Get("ditslps");

    TaFileName::Setup (run, "standard");
    TString file2 = (TaFileName ("root")).Tstring();
    f2 = new TFile(file2);
    cout << "Also opened ROOT file: \n\t" << file2 << endl;
    asy = (TTree*)f2->Get("P");

    if (dit!=NULL) {
      asy->AddFriend("dit",file);
      cout << "dit tree friended to asy tree" << endl;
    }

    ditdef = (TaRootDitDef*)f->Get("TaRootDitDef;1");
    if (ditdef) ditdef->Print();

    pandef = (TaRootRep*)f2->Get("TaRootRep;1");
    raw = (TTree*)f2->Get("R");
  } else {

    pandef = (TaRootRep*)f->Get("TaRootRep;1");
    raw = (TTree*)f->Get("R");
    asy = (TTree*)f->Get("P");

  }
  //  f->cd();

  return run;  
}
